{
  "name": "tech-standard-nest-auth",
  "version": "0.0.1",
  "description": "Authentication module for Nest framework (node.js)",
  "author": "Nguyen Ngoc Phuong",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "packlocal": "yarn build && cd ./dist && pwd && yarn pack --pack-destination ~",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint 'src/**/*.ts' --fix",
    "precommit": "lint-staged",
    "test": "jest",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{ts,json}": []
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sun-asterisk/tech-standard-nest-auth"
  },
  "devDependencies": {
    "@nestjs/platform-express": "^9.2.1",
    "@types/express": "^4.17.15",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.34",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@nestjs/common": "^9.3.3",
    "@nestjs/core": "^9.3.3",
    "@nestjs/jwt": "^10.0.1",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/typeorm": "^9.0.1",
    "argon2": "^0.30.3",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "typeorm": "^0.3.11"
  }
}
