{
  "name": "@sun-asterisk/nest-auth",
  "version": "0.0.4",
  "description": "Authentication module for Nest framework (node.js)",
  "author": "Nguyen Ngoc Phuong",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "packlocal": "yarn build && cd ./dist && pwd && yarn pack --pack-destination ~",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint 'src/**/*.ts' --fix",
    "precommit": "lint-staged",
    "test": "jest --runInBand",
    "prepare": "husky install",
    "pub": "yarn build && yarn publish"
  },
  "lint-staged": {
    "**/*.{ts,json}": []
  },

  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/plugin-proposal-decorators": "^7.21.0",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-typescript": "^7.21.4",
    "@jest/globals": "^29.5.0",
    "@nestjs/platform-express": "^9.2.1",
    "@nestjs/testing": "^9.4.0",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.5.0",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.1.0",
    "passport-facebook": "^3.0.0",
    "prettier": "^2.8.2",
    "rimraf": "^3.0.2",
    "sqlite3": "^5.1.6",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@nestjs/common": "^9.3.3",
    "@nestjs/core": "^9.3.3",
    "@nestjs/jwt": "^10.0.1",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/typeorm": "^9.0.1",
    "argon2": "^0.30.3",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "typeorm": "^0.3.11"
  },
  "types": "./dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/sun-asterisk/tech-standard-nest-auth/issues"
  },
  "homepage": "https://github.com/sun-asterisk/tech-standard-nest-auth#readme",
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "collectCoverage": true,
    "verbose": true
  }
}
